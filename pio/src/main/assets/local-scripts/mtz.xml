<?xml version="1.0" encoding="UTF-8" ?>
<group>
  <text>
    <title>配置</title>
  </text>
    <picker auto-off="true" shell="hidden" icon="pic/style.png">
        <title>选择主题图标</title>
        <options>
                <option value="Hyper">HyperOS(推荐)</option>
                <option value="default">MIUI经典(推荐)</option>
                <option value="explore">MIUI探·界(推荐)</option>
                <option value="coloros13">ColorOS13(推荐)</option>
                <option value="coloros12">ColorOS12(推荐)</option>
                <option value="flyme9">Flyme9(推荐)</option>
                <option value="flyme10">Flyme10(Beta)</option>
                <option value="iOS">iOS(Beta)</option>
                <option value="lrone">Lrone</option>
                <option value="luck7">Luck7</option>
                <option value="perfectcurve">完美曲线</option>
                <option value="Aquamarine">鸿蒙-润泽</option>
                <option value="AmethystLake">EMUI-紫晶湖</option>
                <option value="GoldenBeach">EMUI-碧海金沙</option>
                <option value="LightWings">EMUI-光之翼</option>
                <option value="Nebulae">EMUI-宇宙之眼</option>
                <option value="StarrySky">EMUI-星夜彩绘</option>
                <option value="Reconstruction">EMUI-未来之翼</option>
        </options>
        <summary sh="source local-scripts/misc/get_seltheme_name.sh" />
        <auto-off>true</auto-off>
        <get> 
            source theme_files/theme_config
            echo $sel_theme
        </get>
        <set>echo "sel_theme=$state" &gt; theme_files/theme_config </set>
    </picker>
    <page icon="pic/addon.png" before-read="source local-scripts/misc/addon_init.sh">
        <config>addon.xml</config>
        <title>图标自定义</title>
        <desc>图标自定义的开关、配置说明及图标存档下载</desc>
    </page>
    <page icon="pic/disabledynamic.png">
        <config>disabledynamicicons.xml</config>
        <title>禁用动态图标</title>
        <desc>可禁用某些或全部图标的动画效果</desc>
    </page>
    <action shell="hidden" icon="pic/folder.png">
        <title>选择文件保存位置</title>
        <param name="dir" type="folder" value="/sdcard/Download" />
        <summary sh="source theme_files/mtzdir_config ; echo 当前路径为：$mtzdir " />
        <set>echo "mtzdir=$dir" &gt; theme_files/mtzdir_config</set>
    </action>
</group>
<group>
  <text>
    <title>其他</title>
  </text>
    <page html="https://icons-demo.pedroz.eu.org/" title="预览主题图标" icon="pic/preview.png"/>
    <page config="page/mtz.xml" title="使用说明及常见问题" icon="pic/qa.png"/>
</group>
<group>
  <text>
    <title>下载</title>
  </text>
    <action icon="pic/brush.png" reload="@cleancache" visible="source local-scripts/misc/installer_check.sh noroot" warning="试用须知：1.由于采用了非官方的接口，在没有破解主题自动还原的情况下，试用后随时可能恢复默认主题（可能在你打游戏的时候突然退回到桌面）。请及时手动切换回默认主题。2.如果主题应用后字体有问题，重启即可解决">
        <title>下载mtz并试用</title>
        <desc>点击会应用主题，一段时间后会恢复默认。请及时切换回原来的主题。</desc>
        <set>source $START_DIR/local-scripts/misc/mtz.sh apply</set>
    </action>
    <action icon="pic/save.png" reload="@cleancache">
        <title>仅下载mtz</title>
        <desc>确认上述配置无误后，轻触下载mtz</desc>
        <set>source $START_DIR/local-scripts/misc/mtz.sh</set>
    </action>
</group>

<group visible="source local-scripts/misc/installer_check.sh" >
      <text>
    <title>Root 专区</title>
    </text>
    <action icon="pic/su.png">
        <title>防止恢复默认主题</title>
        <desc>仅本次开机有效，重启后失效。仅需root权限，不需要magisk</desc>
        <set>chmod 731 /data/system/theme; echo "已完成"</set>
    </action>
    <action icon="pic/magisk.png">
        <title>[Magisk]防止恢复默认主题</title>
        <desc>安装防止恢复的Magisk模块，重启不会失效</desc>
        <set>source $START_DIR/local-scripts/misc/mtcrack.sh</set>
    </action>
</group>
